#!/bin/sh
rm -f /var/run/mount.davfs/*.pid
mkdir -p /mnt/tailscale
# Create temp config with empty credentials
mkdir -p ~/.davfs2
echo "http://100.100.100.100:8080 /mnt/tailscale" >> /tmp/davfs-mount-$$.conf
# Try using the direct mount without prompts
/usr/bin/mount -t davfs -o allow_other http://100.100.100.100:8080 /mnt/tailscale 2>/dev/null &
rm -f /tmp/davfs-mount-$$.conf
